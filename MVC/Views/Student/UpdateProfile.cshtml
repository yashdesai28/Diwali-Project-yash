<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2024.1.119/styles/kendo.default-v2.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2024.1.119/js/kendo.all.min.js"></script>
    <style>
        /* Styling the card container */
        #cardsContainer {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        /* Card layout styles */
        .k-card .k-card-header h5 {
            margin: 0;
            font-weight: bold;
            color: #4a4a4a;
        }
        .k-card .k-card-body p {
            margin: 0;
            font-size: 1.1em;
            color: #333;
        }

        /* Styling the Edit Profile button */
        .edit-button {
            display: inline-block;
            background-color: #1a73e8; /* Blue color */
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-align: center;
            width: auto;
            margin: 20px auto;
        }

        /* Hover effect for the Edit Profile button */
        .edit-button:hover {
            background-color: #0f5bb5;
        }

        /* Styling Save Changes button in Kendo Window */
        #saveChangesButton {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
            display: block;
            margin: 0 auto;
        }

        #saveChangesButton:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

<div id="cardsContainer" class="k-cards-container"></div>

<!-- Edit Profile Form in a Kendo Window -->
<div id="editProfileWindow" style="display: none;">
    <form id="editProfileForm" enctype="multipart/form-data">
        <label for="name">Name</label>
        <input id="name" name="name" class="k-textbox" style="width: 100%;" /><br><br>

        <label for="email">Email</label>
        <input id="email" name="email" class="k-textbox" style="width: 100%;" /><br><br>

        <label for="mobileNumber">Mobile Number</label>
        <input id="mobileNumber" name="mobileNumber" class="k-textbox" style="width: 100%;" /><br><br>

        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="k-dropdown" style="width: 100%;">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Others">Others</option>
        </select><br><br>

        <label for="birthDate">Birth Date</label>
        <input id="birthDate" name="birthDate" class="k-datepicker" style="width: 100%;" /><br><br>

        <label for="address">Address</label>
        <textarea id="address" name="address" class="k-textarea" style="width: 100%;"></textarea><br><br>

        <button type="button" id="saveChangesButton" class="k-button k-primary">Save Changes</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        var userId = 5;  // Replace this with dynamic logic to get the userId

        // Initialize Kendo DatePicker in the edit form
        $("#birthDate").kendoDatePicker({
            format: "yyyy-MM-dd",
            max: new Date()
        });

        // Initialize Kendo Window for editing
        var editProfileWindow = $("#editProfileWindow").kendoWindow({
            title: "Edit Profile",
            visible: false,
            modal: true,
            width: "400px"
        }).data("kendoWindow");

        // Fetch profile data and display in CardsContainer
        $.ajax({
            url: `http://localhost:5064/api/Student/GetProfileById/${userId}`,
            type: 'GET',
            success: function(data) {
                renderProfileCards(data);
            },
            error: function() {
                alert("Failed to load profile data.");
            }
        });

        // Function to render data in Kendo CardsContainer
        function renderProfileCards(data) {
            var cardsHtml = `
                <div class="k-card">
                    <div class="k-card-header"><h5>Name</h5></div>
                    <div class="k-card-body"><p>${data.name}</p></div>
                </div>
                <div class="k-card">
                    <div class="k-card-header"><h5>Email</h5></div>
                    <div class="k-card-body"><p>${data.email}</p></div>
                </div>
                <div class="k-card">
                    <div class="k-card-header"><h5>Mobile Number</h5></div>
                    <div class="k-card-body"><p>${data.mobileNumber}</p></div>
                </div>
                @* <div class="k-card">
                    <div class="k-card-header"><h5>Gender</h5></div>
                    <div class="k-card-body"><p>${data.gender}</p></div>
                </div> *@
                <div class="k-card">
                    <div class="k-card-header"><h5>Birth Date</h5></div>
                    <div class="k-card-body"><p>${data.birthDate}</p></div>
                </div>
                <div class="k-card">
                    <div class="k-card-header"><h5>Address</h5></div>
                    <div class="k-card-body"><p>${data.address}</p></div>
                </div>
                <button id="editButton" class="edit-button">Edit Profile</button>
            `;

            $("#cardsContainer").html(cardsHtml);

            // Open the edit form in Kendo Window on "Edit Profile" click
            $("#editButton").click(function () {
                $("#name").val(data.name);
                $("#email").val(data.email);
                $("#mobileNumber").val(data.mobileNumber);
                $("#gender").val(data.gender);
                $("#birthDate").data("kendoDatePicker").value(new Date(data.birthDate));
                $("#address").val(data.address);

                editProfileWindow.center().open();
            });
        }

        // Update Profile on Save Changes button click
        $("#saveChangesButton").click(function () {
            var formData = new FormData();
            formData.append("name", $("#name").val());
            formData.append("email", $("#email").val());
            formData.append("mobileNumber", $("#mobileNumber").val());
            formData.append("gender", $("#gender").val());
            formData.append("birthDate", $("#birthDate").val());
            formData.append("address", $("#address").val());

            $.ajax({
                url: `http://localhost:5064/api/Student/UpdateStudentProfile/${userId}`,
                type: 'PUT',
                data: formData,
                contentType: false,
                processData: false,
                success: function() {
                    editProfileWindow.close();
                    alert("Profile updated successfully!");
                    location.reload();  // Reload to fetch updated data
                },
                error: function() {
                    alert("Failed to update profile.");
                }
            });
        });
    });
</script>

</body>
</html>
